<Window x:Class="PersonalFinanceApp.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceApp"
        mc:Ignorable="d"
        Title="Personal Finance" Height="500" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Определение строк -->
        <Grid x:Name="mainWindow">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>

            <!-- Определение общего кол-ва денег-->
            <Grid Grid.Row="0">
                <Border Background="LightGray" Margin="10,5,10,5" Grid.Column="2">
                    <StackPanel>
                        <TextBlock Text="Деньги на счету" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalTextBlock" FontSize="14" Margin="0,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Определение кнопки для Трназакций-->
            <Grid Grid.Row="1">
                <Button Content="Добавить транзакцию" FontSize="14" Margin="70,0,70,0" Background="LightGray"
                Click="Transaction_Click"/>
            </Grid>

            <!-- Определение Топ Расходов-->
            <Grid Grid.Row="2">
                <StackPanel>
                    <TextBlock Text="Топ расходов" FontWeight="Bold" FontSize="16"/>
                    <ItemsControl x:Name="TopExpensesList">
                        <!-- Здесь будут элементы списка -->
                    </ItemsControl>
                    <Button Content="Развернуть" Click="ExpandTopExpenses_Click"/>
                </StackPanel>
            </Grid>

            <!-- Определение Истории Расходов-->
            <Grid Grid.Row="3">
                <StackPanel>
                    <TextBlock Text="История транзакций" FontWeight="Bold" FontSize="16"/>
                    <ItemsControl x:Name="RecentTransactionsList">
                        <!-- Здесь будут элементы списка -->
                    </ItemsControl>
                    <Button Content="Развернуть" Click="ShowFullHistory_Click"/>
                </StackPanel>
            </Grid>

            <!-- Определение Окна 'Напоминание'-->
            <Grid Grid.Row="4">
                <Button Content="Напоминания" FontSize="14" Margin="70,0,70,0" Background="LightGray"
                Click="ReminderOpen_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
