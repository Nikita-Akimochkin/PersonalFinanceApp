<Window x:Class="PersonalFinanceApp.FullHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceApp"
        mc:Ignorable="d"
        Title="Full history" Height="300" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <TextBlock Text="Full history:" FontWeight="Bold" FontSize="16"/>
            <ItemsControl x:Name="FullTransactionsHistoryList">
                <!-- Here will be the items in the list -->
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Window>
